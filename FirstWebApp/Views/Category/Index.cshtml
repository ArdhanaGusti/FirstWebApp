@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Index Category</h1>
        </div>
        <div class="col-md-6" style="text-align:right">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">Create</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th scope="col">Created Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th scope="row">@obj.Id</th>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.CreatedDate.ToLocalTime()</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <form method="post" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                                <button type="submit" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

